<Window x:Class="PrimerCas4._2DG.CustomRender"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PrimerCas4._2DG"
        Title="CustomRender" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <local:CustomRenderer Grid.Column="0" Grid.Row="0" BackgroundImage="{Binding Path=Image}"/>
    </Grid>
</Window>
